<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
        version="4.0">

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/index.html</location>
    </error-page>

    <!-- 上下文参数 -->
    <context-param>
        <param-name>adminEmail</param-name>
        <param-value>490808114@qq.com</param-value>
    </context-param>

    <servlet>
        <servlet-name>loginin</servlet-name>
        <servlet-class>xyz.n490808114.account.web.LoginIn</servlet-class>
        <init-param>
            <param-name>adminEmail</param-name>
            <param-value>490808114@qq.com</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>download</servlet-name>
        <servlet-class>xyz.n490808114.download.web.DownloadItem</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginin</servlet-name>
        <url-pattern>/loginin.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>download</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>

</web-app>