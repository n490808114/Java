<web-app xmlns="http://java.sun.com/xml/ns/j2ee"

         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- 上下文参数 -->
    <context-param>
        <param-name>adminEmail</param-name>
        <param-value>490808114@qq.com</param-value>
    </context-param>
    <listener>
        <listener-class>com.listener.model.MyContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>loginin</servlet-name>
        <servlet-class>com.account.web.LoginIn</servlet-class>
        <init-param>
            <param-name>adminEmail</param-name>
            <param-value>490808114@qq.com</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>download</servlet-name>
        <servlet-class>com.listener.web.ListenerTester</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginin</servlet-name>
        <url-pattern>/loginin.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>download</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>

</web-app>